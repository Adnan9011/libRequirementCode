<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="ir.adnan.lib_requirement_code">

    <uses-sdk
        tools:overrideLibrary="co.ronash.pushe"

        android:minSdkVersion="15"
        android:targetSdkVersion="22"
        />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:supportsRtl="false">

        <activity
            android:name=".pushe.activity.ClickNotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Translucent"
            />

        <!-- Notification -->
        <receiver android:name="ir.adnan.lib_requirement_code.pushe.broadcast.SendSms" />

        <!-- PUSHE -->
        <service
            android:name="ir.adnan.lib_requirement_code.pushe.service.ImplementPusheListener"
            android:exported="false">
            <intent-filter>
                <action android:name="co.ronash.pushe.RECEIVE" />
            </intent-filter>
        </service>

        <!-- Dialog -->
        <activity
            android:name=".pushe.dialog.DialogRegisterInfo"

            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Translucent" />

        <activity
            android:name=".pushe.dialog.DialogImageNotification"

            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Translucent" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Alton -->
    <uses-permission android:name="android.permission.SEND_SMS"/>
</manifest>
