<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <ImageView
                    android:id="@+id/dialog_image_cancel"
                    android:layout_width="@dimen/vas_dialog_cancel"
                    android:layout_height="@dimen/vas_dialog_cancel"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_cancel"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dialog_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart" />
            </LinearLayout>

            <ir.adnan.lib_requirement_code.view.LibraryTextView
                android:id="@+id/dialog_description"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/text_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1F000000"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_button_ok"
            android:layout_width="wrap_content"
            android:minWidth="110dp"
            android:layout_height="60dp"

            android:layout_marginLeft="10dp"

            android:layout_gravity="left"
            android:gravity="center"

            android:text="OK"

            android:backgroundTint="#FFFF8000"
            android:textColor="@color/all_text_color_black"


            android:layout_marginTop="5dp"

            style="@style/Widget.AppCompat.Button.Colored"

            android:textSize="@dimen/text_title" />

    </LinearLayout>

</LinearLayout>